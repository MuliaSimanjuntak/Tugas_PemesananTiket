<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="16dp"
    android:background="@android:color/white">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemesanan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiket Kereta"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_person"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:hint="Nama Pemesan"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:padding="8dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_access_time"
            android:layout_marginEnd="8dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonJamKeberangkatan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:hint="jam keberengakatan"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_calender"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ButtonTanggalKeberangkatan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:hint="Pilih Tanggal Keberangkatan"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_location"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spinnerTujuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <!--        <EditText-->
        <!--            android:id="@+id/password"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:hint="Tujuan"-->
        <!--            android:background="@null"-->
        <!--            android:fontFamily="@font/poppins_regular"/>-->

        <!--        <ImageView-->
        <!--            android:id="@+id/visibility"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:src="@drawable/baseline_arrow_drop_down_24"/>-->
    </LinearLayout>

    <!-- Register Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan Tiket"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="@color/black"
        android:background="@drawable/shape"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
